<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <section name="IoC" type="Autofac.Configuration.SectionHandler, Autofac.Configuration"/>
  </configSections>
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5" />
  </startup>
  <connectionStrings>
    <!--<add name="database" connectionString="server=localhost;User Id=root;database=stocknotification"/>-->
    <add name="database" connectionString="StockNotification.db"/>  
  </connectionStrings>
  <IoC>
    <components>
      <component type="StockNotification.Database.SQLite.Store, StockNotification.Database.SQLite"
                 service="StockNotification.Database.Interface.IStore, StockNotification.Database.Interface"
                 instance-scope="single-instance"/>
    </components>
  </IoC>
</configuration>